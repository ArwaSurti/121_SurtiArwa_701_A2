<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= action %> Category - Admin</title>
</head>
<body>
    <h1><%= action %> Category</h1>
    
    <table border="1" style="margin: 20px 0;">
        <tr>
            <td style="padding: 10px;">
                <a href="/admin/categories">‚Üê Back to Categories</a> | 
                <a href="/admin/dashboard">Dashboard</a>
            </td>
        </tr>
    </table>
    
    <table border="1" style="margin: 20px 0;">
        <tr>
            <td style="padding: 20px;">
                <form action="<%= category ? `/admin/categories/${category._id}?_method=PUT` : '/admin/categories' %>" method="POST">
                    <table>
                        <tr>
                            <td><label for="name">Category Name:</label></td>
                            <td><input type="text" id="name" name="name" value="<%= category ? category.name : '' %>" required style="width: 300px; padding: 5px;"></td>
                        </tr>
                        <tr>
                            <td><label for="description">Description:</label></td>
                            <td><textarea id="description" name="description" style="width: 300px; height: 80px; padding: 5px;"><%= category ? category.description || '' : '' %></textarea></td>
                        </tr>
                        <tr>
                            <td><label for="parentCategory">Parent Category:</label></td>
                            <td>
                                <select id="parentCategory" name="parentCategory" style="width: 310px; padding: 5px;">
                                    <option value="">Main Category (No Parent)</option>
                                    <% parentCategories.forEach(parent => { %>
                                        <option value="<%= parent._id %>" 
                                                <%= category && category.parentCategory && category.parentCategory.toString() === parent._id.toString() ? 'selected' : '' %>>
                                            <%= parent.name %>
                                        </option>
                                    <% }); %>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="text-align: center; padding-top: 15px;">
                                <button type="submit" style="padding: 8px 20px;"><%= action %> Category</button>
                                <a href="/admin/categories" style="margin-left: 10px;">Cancel</a>
                            </td>
                        </tr>
                    </table>
                </form>
            </td>
        </tr>
    </table>
</body>
</html>
