<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Orders - Admin</title>
</head>
<body>
    <h1>Manage Orders</h1>
    
    <table border="1" style="margin: 20px 0;">
        <tr>
            <td style="padding: 10px;">
                <a href="/admin/dashboard">‚Üê Back to Dashboard</a> | 
                <form action="/auth/logout" method="POST" style="display: inline;">
                    <button type="submit">Logout</button>
                </form>
            </td>
        </tr>
    </table>
    
    <table border="1" style="margin: 20px 0; width: 100%;">
        <tr style="background-color: #f0f0f0;">
            <th style="padding: 10px;">Order ID</th>
            <th style="padding: 10px;">Customer</th>
            <th style="padding: 10px;">Order Date</th>
            <th style="padding: 10px;">Total Amount</th>
            <th style="padding: 10px;">Status</th>
            <th style="padding: 10px;">Actions</th>
        </tr>
        <% if (orders.length === 0) { %>
        <tr>
            <td colspan="6" style="padding: 20px; text-align: center;">
                No orders found.
            </td>
        </tr>
        <% } else { %>
            <% orders.forEach(order => { %>
            <tr>
                <td style="padding: 10px;"><%= order._id.toString().slice(-8) %></td>
                <td style="padding: 10px;"><%= order.user.name %> (<%= order.user.email %>)</td>
                <td style="padding: 10px;"><%= order.orderDate.toLocaleDateString() %></td>
                <td style="padding: 10px;">$<%= order.totalAmount.toFixed(2) %></td>
                <td style="padding: 10px;">
                    <form action="/admin/orders/<%= order._id %>/status?_method=PUT" method="POST" style="display: inline;">
                        <select name="status" onchange="this.form.submit()" style="padding: 3px;">
                            <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                            <option value="confirmed" <%= order.status === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                            <option value="processing" <%= order.status === 'processing' ? 'selected' : '' %>>Processing</option>
                            <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                            <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                            <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                        </select>
                    </form>
                </td>
                <td style="padding: 10px;">
                    <a href="/admin/orders/<%= order._id %>">View Details</a>
                </td>
            </tr>
            <% }); %>
        <% } %>
    </table>
</body>
</html>
