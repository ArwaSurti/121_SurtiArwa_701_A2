<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Categories - Admin</title>
</head>
<body>
    <h1>Manage Categories</h1>
    
    <table border="1" style="margin: 20px 0;">
        <tr>
            <td style="padding: 10px;">
                <a href="/admin/dashboard">‚Üê Back to Dashboard</a> | 
                <a href="/admin/categories/new">Add New Category</a> | 
                <form action="/auth/logout" method="POST" style="display: inline;">
                    <button type="submit">Logout</button>
                </form>
            </td>
        </tr>
    </table>
    
    <table border="1" style="margin: 20px 0; width: 100%;">
        <tr style="background-color: #f0f0f0;">
            <th style="padding: 10px;">Category Name</th>
            <th style="padding: 10px;">Description</th>
            <th style="padding: 10px;">Parent Category</th>
            <th style="padding: 10px;">Status</th>
            <th style="padding: 10px;">Actions</th>
        </tr>
        <% if (categories.length === 0) { %>
        <tr>
            <td colspan="5" style="padding: 20px; text-align: center;">
                No categories found. <a href="/admin/categories/new">Add the first category</a>
            </td>
        </tr>
        <% } else { %>
            <% categories.forEach(category => { %>
            <tr>
                <td style="padding: 10px;"><%= category.name %></td>
                <td style="padding: 10px;"><%= category.description || 'N/A' %></td>
                <td style="padding: 10px;">
                    <%= category.parentCategory ? category.parentCategory.name : 'Main Category' %>
                </td>
                <td style="padding: 10px;">
                    <%= category.isActive ? 'Active' : 'Inactive' %>
                </td>
                <td style="padding: 10px;">
                    <a href="/admin/categories/<%= category._id %>/edit">Edit</a> | 
                    <form action="/admin/categories/<%= category._id %>?_method=DELETE" method="POST" style="display: inline;" 
                          onsubmit="return confirm('Are you sure you want to delete this category?')">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); %>
        <% } %>
    </table>
</body>
</html>
