<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History - Shopping Cart</title>
</head>
<body>
    <h1>Order History</h1>
    
    <table border="1" style="margin: 20px 0;">
        <tr>
            <td style="padding: 10px;">
                <a href="/user/dashboard">‚Üê Back to Dashboard</a> | 
                <a href="/cart">My Cart</a> | 
                <a href="/user/profile">My Profile</a> | 
                <form action="/auth/logout" method="POST" style="display: inline;">
                    <button type="submit">Logout</button>
                </form>
            </td>
        </tr>
    </table>
    
    <table border="1" style="margin: 20px 0; width: 100%;">
        <tr style="background-color: #f0f0f0;">
            <th style="padding: 10px;">Order ID</th>
            <th style="padding: 10px;">Order Date</th>
            <th style="padding: 10px;">Total Amount</th>
            <th style="padding: 10px;">Status</th>
            <th style="padding: 10px;">Actions</th>
        </tr>
        <% if (orders.length === 0) { %>
        <tr>
            <td colspan="5" style="padding: 20px; text-align: center;">
                You haven't placed any orders yet. <a href="/user/dashboard">Start shopping</a>
            </td>
        </tr>
        <% } else { %>
            <% orders.forEach(order => { %>
            <tr>
                <td style="padding: 10px;"><%= order._id.toString().slice(-8) %></td>
                <td style="padding: 10px;"><%= order.orderDate.toLocaleDateString() %></td>
                <td style="padding: 10px;">$<%= order.totalAmount.toFixed(2) %></td>
                <td style="padding: 10px;">
                    <span style="color: <%= order.status === 'delivered' ? 'green' : order.status === 'cancelled' ? 'red' : 'orange' %>;">
                        <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                    </span>
                </td>
                <td style="padding: 10px;">
                    <a href="/user/orders/<%= order._id %>">View Details</a>
                </td>
            </tr>
            <% }); %>
        <% } %>
    </table>
</body>
</html>
