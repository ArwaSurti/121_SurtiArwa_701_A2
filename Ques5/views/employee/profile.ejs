<!DOCTYPE html>
<html>
<head>
    <title>Employee Profile</title>
</head>
<body bgcolor="#f5f5f5">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr bgcolor="#333333">
            <td>
                <table border="0" cellpadding="15" cellspacing="0" width="100%">
                    <tr>
                        <td>
                            <font color="white" size="4"><b>Employee Profile</b></font>
                        </td>
                        <td align="right">
                            <a href="/employee/dashboard">
                                <input type="button" value="Back to Dashboard" style="padding: 5px 10px;">
                            </a>
                            <form action="/auth/logout" method="POST" style="display: inline; margin-left: 10px;">
                                <input type="submit" value="Logout" style="padding: 5px 10px;">
                            </form>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

    <center>
        <table border="0" cellpadding="20" cellspacing="0" width="600">
            <tr>
                <td>
                    <% if (success) { %>
                    <table border="1" cellpadding="10" bgcolor="#ccffcc" width="100%">
                        <tr>
                            <td align="center">
                                <font color="green"><b><%= success %></b></font>
                            </td>
                        </tr>
                    </table>
                    <br>
                    <% } %>

                    <% if (error) { %>
                    <table border="1" cellpadding="10" bgcolor="#ffcccc" width="100%">
                        <tr>
                            <td align="center">
                                <font color="red"><b><%= error %></b></font>
                            </td>
                        </tr>
                    </table>
                    <br>
                    <% } %>

                    <table border="1" cellpadding="20" cellspacing="0" width="100%" bgcolor="white">
                        <tr bgcolor="#4CAF50">
                            <td align="center">
                                <font color="white" size="3"><b>Update Profile Information</b></font>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <form action="/employee/profile" method="POST">
                                    <table border="0" cellpadding="10" cellspacing="0" width="100%">
                                        <tr>
                                            <td width="30%"><b>Employee ID:</b></td>
                                            <td>
                                                <input type="text" value="<%= employee.empId %>" disabled size="30">
                                                <br><small><i>(Cannot be changed)</i></small>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><b>Full Name:</b></td>
                                            <td>
                                                <input type="text" name="name" value="<%= employee.name %>" size="30" required>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><b>Email Address:</b></td>
                                            <td>
                                                <input type="email" name="email" value="<%= employee.email %>" size="30" required>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><b>Department:</b></td>
                                            <td>
                                                <input type="text" value="<%= employee.department %>" disabled size="30">
                                                <br><small><i>(Cannot be changed)</i></small>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><b>Position:</b></td>
                                            <td>
                                                <input type="text" value="<%= employee.position %>" disabled size="30">
                                                <br><small><i>(Cannot be changed)</i></small>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><b>Joining Date:</b></td>
                                            <td>
                                                <input type="text" value="<%= new Date(employee.joiningDate).toLocaleDateString() %>" disabled size="30">
                                                <br><small><i>(Cannot be changed)</i></small>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" align="center">
                                                <br>
                                                <input type="submit" value="Update Profile" style="padding: 10px 20px; font-size: 14px;">
                                            </td>
                                        </tr>
                                    </table>
                                </form>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </center>
</body>
</html>
